layout: page.hbs
# language of the page
lang: en
# Corresponding online url
domain: https://oneplus.net
url: checkout/jcart
# Title of the page
title: Store - Place Order
# Description of the page
description: __to__be__filled__
keywords: __to__be__filled__
# The path of the image that will be shared on facebook, twitter or other media websites
og_path: https://content.oneplus.net/skin/frontend/oneplus2014/default/images/open_graph/oneplus-logo.png
# Width of the image
og_width: 1200
og_height: 630
# Our offical twitter id for specific store, e.g. OnePlus_IN
twieer_site: __to__be__filled__
twieer_creator: __to__be__filled__
# 页面要引用的样式表
# stylesheets: [page.scss]
# 页面要引用的脚本文件
scripts: [https://content.oneplus.net/js/oneplus2015/json/countryNregionJson.js,checkout.vue.js]
